# Настройки сервера
NODE_ENV=development
PORT=5000

# Настройки базы данных
MONGODB_URI=mongodb://localhost:27017/vibepc

# JWT настройки
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-complex
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-make-it-even-longer
JWT_REFRESH_EXPIRES_IN=30d

# Frontend URL для CORS
FRONTEND_URL=http://localhost:3000

# Cookie настройки
COOKIE_DOMAIN=localhost

# Email настройки (для будущей реализации)
EMAIL_FROM=noreply@vibepc.ru
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Настройки безопасности
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=2h

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Cloudinary (для загрузки изображений профиля)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Sentry (для мониторинга ошибок)
SENTRY_DSN=your-sentry-dsn

# Redis (для сессий и кеширования)
REDIS_URL=redis://localhost:6379
